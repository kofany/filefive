{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/index.ts", "src/**/*"]
}
